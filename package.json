{
  "name": "boilerplate-webpack-koa-react-typescript-babel",
  "version": "1.0.0",
  "description": "Boilerplate for a webpack / koa based universal react app using babel, react-router, redux, styled components and typescript.",
  "homepage": "https://github.com/sketchbuch/boilerplate-webpack-koa-react-typescript-babel",
  "license": "MIT",
  "main": "./build/server.js",
  "private": true,
  "author": {
    "name": "sketchbuch",
    "url": "https://github.com/sketchbuch"
  },
  "bugs": {
    "url": "https://github.com/sketchbuch/boilerplate-webpack-koa-react-typescript-babel/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sketchbuch/boilerplate-webpack-koa-react-typescript-babel.git"
  },
  "scripts": {
    "audit:html": "yarn audit --json | yarn-audit-html --output audit-report.html",
    "build": "yarn build:clean && yarn build:server && yarn build:client",
    "build:clean": "rimraf ./{build,public/dist}/*",
    "build:client": "webpack --config ./config/webpack/client.ts",
    "build:server": "webpack --config ./config/webpack/server.ts ",
    "dev": "yarn build && yarn server",
    "lint:css": "stylelint --config ./stylelint.config.js './src/**/*.styles.ts'",
    "lint:js": "eslint --config ./.eslintrc.js --fix  --max-warnings=0 './{src,config}/**/*.{js,ts,tsx}'",
    "lint:js:dry": "eslint --config ./.eslintrc.js --fix-dry-run  --max-warnings=0 './{src,config}/**/*.{js,ts,tsx}'",
    "lint:ts": "tsc --jsx preserve --project ./",
    "lint:prettier": "prettier --write --config ./.prettierrc.js './{src,config}/**/*.{js,ts,tsx}'",
    "profile:client": "yarn profile:client:stats && yarn profile:client:analyze",
    "profile:client:analyze": "webpack-bundle-analyzer stats.client.json",
    "profile:client:stats": "webpack --profile --json --config ./config/webpack/client.ts > stats.client.json",
    "profile:server": "yarn profile:server:stats && yarn profile:server:analyze",
    "profile:server:analyze": "webpack-bundle-analyzer stats.server.json",
    "profile:server:stats": "webpack --profile --json --config ./config/webpack/server.ts  > stats.server.json",
    "server": "node build/server.js",
    "server:debug": "DEBUG=koa-send* node build/server.js",
    "test": "jest --config=./config/jest/jest.js"
  },
  "dependencies": {
    "convict": "^5.2.0",
    "html-webpack-plugin": "^3.2.0",
    "koa": "^2.7.0",
    "koa-combine-routers": "^4.0.2",
    "koa-favicon": "^2.0.1",
    "koa-helmet": "^5.1.0",
    "koa-logger": "^3.2.0",
    "koa-router": "^7.4.0",
    "koa-static": "^5.0.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-helmet": "^5.2.1",
    "react-redux": "^7.1.1",
    "react-router-dom": "^5.1.0",
    "react-router-redux": "^4.0.8",
    "styled-components": "^4.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@testing-library/jest-dom": "^4.1.0",
    "@testing-library/react": "^9.2.0",
    "@types/convict": "^4.2.1",
    "@types/html-webpack-plugin": "^3.2.1",
    "@types/jest": "^24.0.17",
    "@types/koa": "^2.0.49",
    "@types/koa-favicon": "^2.0.19",
    "@types/koa-helmet": "^3.1.2",
    "@types/koa-logger": "^3.1.1",
    "@types/koa-router": "^7.0.42",
    "@types/koa-static": "^4.0.1",
    "@types/node": "^12.12.11",
    "@types/react": "^16.8.24",
    "@types/react-dom": "^16.8.5",
    "@types/react-redux": "^7.1.4",
    "@types/react-router-dom": "^5.1.0",
    "@types/react-router-redux": "^5.0.18",
    "@types/react-test-renderer": "^16.9.0",
    "@types/styled-components": "^4.1.19",
    "@types/supertest": "^2.0.8",
    "@types/webpack": "^4.41.0",
    "@types/webpack-dev-middleware": "^2.0.3",
    "@types/webpack-hot-client": "^4.0.0",
    "@types/webpack-merge": "^4.1.5",
    "@types/webpack-node-externals": "^1.7.0",
    "@typescript-eslint/eslint-plugin": "^2.8.0",
    "@typescript-eslint/parser": "^2.8.0",
    "babel-eslint": "^10.0.2",
    "babel-jest": "^24.8.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-styled-components": "^1.10.6",
    "clean-webpack-plugin": "^3.0.0",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-config-react": "^1.1.7",
    "eslint-loader": "^2.2.1",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.16.0",
    "husky": "^3.1.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.8.0",
    "jest-localstorage-mock": "^2.4.0",
    "jest-styled-components": "^6.3.3",
    "lint-staged": "^9.4.3",
    "prettier": "^1.18.2",
    "react-hot-loader": "^4.12.10",
    "react-test-renderer": "^16.10.2",
    "stylelint": "^11.1.1",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-custom-processor-loader": "^0.6.0",
    "stylelint-processor-styled-components": "^1.8.0",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "ts-loader": "^6.0.4",
    "ts-node": "^8.5.2",
    "typescript": "^3.5.3",
    "webpack": "^4.39.1",
    "webpack-bundle-analyzer": "^3.5.1",
    "webpack-cli": "^3.3.6",
    "webpack-dev-middleware": "^3.7.2",
    "webpack-hot-client": "^4.1.2",
    "webpack-merge": "^4.2.2",
    "webpack-node-externals": "^1.7.2",
    "yarn-audit-html": "^1.1.0"
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn lint-staged",
      "pre-commit": "yarn lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,ts,tsx}": [
      "yarn lint:js",
      "yarn prettier",
      "git add"
    ]
  }
}
