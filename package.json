{
  "name": "boilerplate-webpack-koa-react-typescript-babel",
  "version": "1.0.0",
  "description": "Boilerplate for a webpack / koa based react project using typescript & babel.",
  "homepage": "https://github.com/sketchbuch/boilerplate-webpack-koa-react-typescript-babel",
  "license": "MIT",
  "main": "./build/server.js",
  "private": true,
  "author": {
    "name": "sketchbuch",
    "url": "https://github.com/sketchbuch"
  },
  "bugs": {
    "url": "https://github.com/sketchbuch/boilerplate-webpack-koa-react-typescript-babel/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sketchbuch/boilerplate-webpack-koa-react-typescript-babel.git"
  },
  "scripts": {
    "audit:html": "yarn audit --json | yarn-audit-html --output audit-report.html",
    "build": "yarn build:clean && yarn build:server && yarn build:client",
    "build:clean": "rimraf ./{build,public}/*",
    "build:client": "webpack --config ./config/webpack/client.js",
    "build:server": "webpack --config ./config/webpack/server.js ",
    "dev": "yarn build && yarn server",
    "dev:wds": "yarn build && yarn server:wds",
    "lint:css": "stylelint --config=.stylelintrc 'src/**/*.{css,less,sass}'",
    "lint:js": "eslint --config .eslintrc --fix 'src/**/*.{js,ts,tsx}'",
    "lint:js:dry": "eslint --config .eslintrc --fix-dry-run 'src/**/*.{js,ts,tsx}'",
    "lint:ts": "tsc --jsx preserve --project ./",
    "profile:client": "yarn profile:client:stats && yarn profile:client:analyze",
    "profile:client:analyze": "webpack-bundle-analyzer stats.client.json",
    "profile:client:stats": "webpack --profile --json --config ./config/webpack/client.js > stats.client.json",
    "profile:server": "yarn profile:server:stats && yarn profile:server:analyze",
    "profile:server:analyze": "webpack-bundle-analyzer stats.server.json",
    "profile:server:stats": "webpack --profile --json --config ./config/webpack/server.js  > stats.server.json",
    "server": "node build/server.js",
    "server:debug": "DEBUG=koa-send* node build/server.js",
    "test": "jest --config=./config/jest/jest.js",
    "test:c": "jest --config=./config/jest/jest.js --coverage",
    "test:w": "jest --config=./config/jest/jest.js --watch"
  },
  "dependencies": {
    "html-webpack-plugin": "^3.2.0",
    "koa": "^2.7.0",
    "koa-combine-routers": "^4.0.2",
    "koa-logger": "^3.2.0",
    "koa-router": "^7.4.0",
    "koa-static": "^5.0.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-helmet": "^5.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@types/enzyme": "^3.10.3",
    "@types/enzyme-adapter-react-16": "^1.0.5",
    "@types/jest": "^24.0.17",
    "@types/koa": "^2.0.49",
    "@types/koa-logger": "^3.1.1",
    "@types/koa-router": "^7.0.42",
    "@types/koa-static": "^4.0.1",
    "@types/react": "^16.8.24",
    "@types/react-dom": "^16.8.5",
    "@types/supertest": "^2.0.8",
    "babel-eslint": "^10.0.2",
    "babel-jest": "^24.8.0",
    "babel-loader": "^8.0.6",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^3.1.0",
    "cssnano": "^4.1.10",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "eslint": "^6.1.0",
    "eslint-config-react": "^1.1.7",
    "eslint-loader": "^2.2.1",
    "eslint-plugin-react": "^7.14.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.8.0",
    "jest-localstorage-mock": "^2.4.0",
    "mini-css-extract-plugin": "^0.8.0",
    "postcss-import": "^12.0.1",
    "postcss-loader": "^3.0.0",
    "postcss-preset-env": "^6.7.0",
    "postcss-safe-parser": "^4.0.1",
    "prettier": "^1.18.2",
    "react-hot-loader": "^4.12.10",
    "style-loader": "^0.23.1",
    "stylelint": "^10.1.0",
    "stylelint-config-recommended": "^2.2.0",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "ts-loader": "^6.0.4",
    "typescript": "^3.5.3",
    "webpack": "^4.39.1",
    "webpack-bundle-analyzer": "^3.5.1",
    "webpack-cli": "^3.3.6",
    "webpack-node-externals": "^1.7.2",
    "yarn-audit-html": "^1.1.0"
  }
}
